1) /*C program to determine whether the entered character 
is a vowel or consonants*/

include <stdio.h>
int main()
{
   char alp;
   printf("Enter any alphabet:\n");
   scanf("%c",&alp);
   switch(alp)
     {
	case 'A':
	case 'E':
	case 'I':
	case 'O':
	case 'U':
	case 'a':
	case 'e':
	case 'i':
	case 'o':
	case 'u':
	printf("It is a vowel",alp);
	break;
	default:
	printf("It is a consonant",alp);
     }
     return 0;
}
 
2) /*C program to convert time to minutes using functions*/

#include <stdio.h>
int minutes(int h,int m);
int main()
{
   int hr,min,total_min;
   printf("Enter hours and minutes\n");
   scanf("%d%d",&hr,&min);
   total_min=minutes(hr,min);
   printf("Minutes are %d",total_min);
   return 0;
}

int minutes(int h,int m)
{
  return((h*60)+m);
}

3) /*C program to determine the month when the input is the integer from 1-12*/

#include <stdio.h>
int main()
{
	int num;
	printf("Enter any integer from 1 to 12:\n");
	scanf("%d",&num);
	switch(num)
	{
		case 1:
		printf("January");
		break;
		case 2:
		printf("February");
		break;
		case 3:
		printf("March");
		break;
		case 4:
		printf("April");
		break;
		case 5:
		printf("May");
		break;
		case 6:
		printf("June");
		break;
		case 7:
		printf("July");
		break;
		case 8:
		printf("August");
		break;
		case 9:
		printf("September");
		break;
		case 10:
		printf("October");
		break;
		case 11:
		printf("November");
		break;
		case 12:
		printf("December");
		break;
		default:
		printf("Entered wrong number\n");
	}
	return 0;
}

 
 
